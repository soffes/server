export RBENV_ROOT=<%= @rbenv_root %>
export PATH=$RBENV_ROOT/bin:<%= @ruby_build_bin_path %>:$PATH

case $SHELL in
*/zsh)
  source $RBENV_ROOT/completions/rbenv.zsh
  ;;
*/bash)
  source $RBENV_ROOT/completions/rbenv.bash
  ;;
*)
  source $RBENV_ROOT/completions/rbenv.bash
  ;;
esac

eval "$(rbenv init -)"
